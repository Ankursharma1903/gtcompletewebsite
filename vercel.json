{
  "version": 2,
  "builds": [
    {
      "src": "./app.js",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {"handle": "filesystem"},
    {
      "src": "/static/(.*)",
      "dest": "/static/$1"
    },
    {
      "src": "/static/css/(.*)",
      "dest": "/static/css/$1"
    },
    {
      "src": "/views/(.*)",
      "dest": "/views/$1"
    },
    {
      "src": "/(.*)",
      "dest": "/app.js"
    }
  ],
  "env": {
    "mongo_connect_uri": "mongodb+srv://ankur:1903@cluster0.vet21d2.mongodb.net/",
    "port": "3000"
  }
}
